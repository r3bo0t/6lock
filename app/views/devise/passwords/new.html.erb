<% title = "Forgot my password" %>
<% description = "If you reset your password we will not be able to decrypt any of your stored passwords, but the rest of your files will still be there." %>
<% set_head(title, description) %>

<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <p id="warning">If you reset your password we will not be able to decrypt any of your stored passwords, but the rest of your files will still be there.</p>

  <p id="reset_password_field">
    <%= f.email_field :email, :placeholder => "E-mail" %>
  </p>

  <div><%= f.submit "Send me reset password instructions", :id => "reset_password_button" %></div>
<% end %>

<%= render "devise/shared/links" %>
