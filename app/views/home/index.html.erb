<h1>Welcome<%= ", #{current_user.name}" if current_user.name %></h1>

<p>
<strong>New folder</strong>
<%= form_for @folder, :remote => true do |f| %>
  <%# @folder.errors.full_messages.each do |msg| %>
    <!--p><%#= msg %></p-->
  <%# end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
</p>

<p>
<% @folders.each do |folder| %>
  <%= folder.name %><br>
  <% folder.records.each do |record| %>
    &nbsp;&nbsp;<%= record.name %><br>
  <% end %>
  <br>
<% end %>
</p>

<p>
<strong>Often used</strong><br>
<% @often_used.each do |record| %>
  <%= record.name %><br>
<% end %>
</p>
