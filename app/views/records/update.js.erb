<% if @record.valid? %>
  $(function() {
    $('#link_<%= @record.id %>').next('.rename_element').hide()
    $('#link_<%= @record.id %>').html('<%= @record.name %>').show()
    $('#record_name').html('<%= @record.name.capitalize %>')
  })
<% else %>
  alert("The name you submitted contains invalid characters or is too long (> 23).")
<% end %>